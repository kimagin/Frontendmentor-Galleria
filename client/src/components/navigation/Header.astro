---
import Logo from '../Logo.astro'
import Nav from './Nav.astro'
---

<header>
  <div class="header-container max-w-7xl mx-auto">
    <Logo />
    <Nav />
  </div>
  <span class="divider"></span>
</header>

<style>
  header {
    @apply flex  flex-col container mx-auto max-w-7xl px-8;
  }
  .header-container {
    @apply w-full flex justify-between items-center py-8;
  }

  .divider {
    @apply border-b-[1px] border-mid-gray w-full;
  }
</style>
