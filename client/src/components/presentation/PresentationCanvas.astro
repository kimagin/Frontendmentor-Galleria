---
import Link from "../navigation/Link.astro";
export interface Props {
  name: string;
  year: string;
  description: string;
  source: string;
  artistName: string;
  artistImage: string;
  thumbnail?: string;
  heroSmall?: string;
  heroLarge?: string;
  galleryImage?: string;
}

const {
  name = "Artist Name",
  year = "Year",
  description = "About the painting...",
  source = "More information on the internet",
  artistName = "Artist Name",
  artistImage = "Artist Portrait",
  thumbnail,
  heroSmall,
  heroLarge,
  galleryImage,
} = Astro.props;
---

<section class="absolute inset-0 flex items-center h-full" data-name={name}>
  <!-- Album -->
  <div class="flex flex-col lg:flex-row justify-between w-full">
    <div class="flex h-fit">
      <!-- Hero Image -->
      <div class="h-fit relative -z-0 mt-8">
        <!-- Hero Image : Large screen -->
        <img
          width="470px"
          height="560px"
          class="h-fit object-contain hidden lg:flex"
          src={heroLarge}
          alt=""
        />
        <!-- Artist Image : Large screen -->
        <img
          class="ml-[1.875rem] hidden lg:flex lg:absolute -right-[9.87rem] -bottom-[64px]"
          width="128"
          height="128"
          src={artistImage}
        />
      </div>

      <div
        class="flex flex-col h-fit justify-between mt-8 items-end absolute lg:relative max-w-[300px] lg:max-w-none right-0"
      >
        <!-- Title -->
        <div class="flex flex-col gap-8 relative">
          <span class="absolute -inset-[4rem] bg-white -z-0"></span>
          <h1 class="z-40 max-w-[23.75rem] image-title">{name}</h1>
          <h3 class="subhead1 w-fit text-dark-gray z-10">{artistName}</h3>
        </div>
      </div>
      <!-- Hero Image : Large screen -->

      <img
        width="470px"
        height="560px"
        class="h-fit object-contain lg:hidden"
        src={heroLarge}
        alt=""
      />
      <!-- Artist Image : Tablet screen -->
      <div>
        <img
          class="ml-[1.875rem] mt-[4rem] lg:hidden"
          width="128"
          height="128"
          src={artistImage}
        />
      </div>
    </div>
    <!-- Descriptions -->
    <div class="flex flex-col justify-between z-10 mr-12 w-1/3 relative">
      <h1 class="display right-0 absolute -z-50">{year}</h1>
      <p class="min-w-[21.8rem] w-[21.8rem] pt-36 text-dark-gray">
        {description}
      </p>
      <div class="mt-4">
        <Link href="" text="GO TO SOURCE" />
      </div>
    </div>
  </div>
</section>

<style is:inline>
  .image-title {
    font-size: clamp(3rem, 5vw, 3rem);
    line-height: clamp(3rem, 5vw, 4rem);
  }
</style>
