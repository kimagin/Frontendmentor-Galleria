---
export interface Props {
  name: string
  year: string
  description: string
  source: string
  artistName: string
  artistImage: string
  thumbnail?: string
  heroSmall?: string
  heroLarge?: string
  galleryImage?: string
}

const {
  name = 'Artist Name',
  year = 'Year',
  description = 'About the painting...',
  source = 'More information on the internet',
  artistName = 'Artist Name',
  artistImage = 'Artist Portrait',
  thumbnail,
  heroSmall,
  heroLarge,
  galleryImage,
} = Astro.props
---

<div class="flex flex-col md:flex-row">
  <div class="flex">
    <!-- Image Container -->
    <div class="flex flex-col">
      <div class="presentation-image flex flex-1">
        <img
          width="560px"
          height="475px"
          class="w-full h-full object-cover"
          src={heroLarge}
          alt=""
        />
      </div>
      <div class="h-[64px] w-full"></div>
    </div>
    <div class="flex border-4 flex-col justify-between items-start">
      <div
        class="before:bg-white before:inset-0 before:-left-16 before:-bottom-16 before:absolute relative z-20 before:-z-10 flex flex-col gap-5 wrap">
        <h1 class="w-fit max-w-sm">{name}</h1>
        <p class="text-dark-gray">{artistName}</p>
      </div>
      <div class="ml-8">
        <img
          width="128"
          height="128"
          src={artistImage}
          alt=""
        />
      </div>
    </div>
  </div>
  <div class="px-16">
    <p class="w-full max-w-2xl">{description}</p>
  </div>
</div>

<style>
  .presentation-image {
    min-width: clamp(380px, 60%, 560px);
  }
</style>
