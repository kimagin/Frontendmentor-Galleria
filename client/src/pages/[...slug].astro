---
import SlideShowLayout from '../layouts/SlideShowLayout.astro'
import { slugify } from '../js/utils'
import PresentationCanvas from '../components/presentation/PresentationCanvas.astro'
import NavigationControlPanel from '../components/navigation/NavigationControlPanel.astro'

// Dynamic rout creation
export async function getStaticPaths() {
  const SERVER = import.meta.env.SERVER
  const request = await fetch(SERVER + 'assets/imagedata.json')
  const dataBase = await request.json()
  const pages = [...dataBase]
  pages.forEach((page) => {
    page['slug'] = slugify(page.name)
  })

  return pages.map(
    ({ name, slug, year, description, source, artist, images }) => {
      return {
        params: { slug },
        props: {
          slug,
          name,
          year,
          description,
          artistName: artist.name,
          artistImage: SERVER + artist.image,
          thumbnail: SERVER + images.thumbnail,
          heroSmall: SERVER + images.hero.small,
          heroLarge: SERVER + images.hero.large,
          galleryImage: SERVER + images.gallery,
        },
      }
    }
  )
}
export interface Props {
  name: string
  year: number
  description: string
  source: string
  artistName: string
  artistImage: string
  thumbnail: string
  heroSmall: string
  heroLarge: string
  galleryImage: string
}

const {
  name,
  year,
  description,
  source,
  artistName,
  artistImage,
  thumbnail,
  heroSmall,
  heroLarge,
  galleryImage,
} = Astro.props as Props
---

<SlideShowLayout title={name}>
  <section class="container mx-auto max-w-7xl px-8 flex justify-between h-full">
    {/*Presentation Page template */}
    <div class="flex pt-24 pb-12 border-4">
      <PresentationCanvas
        {name}
        {year}
        {description}
        {source}
        {artistName}
        {artistImage}
        {thumbnail}
        {heroSmall}
        {heroLarge}
        {galleryImage}
      />
    </div>
  </section>
  <NavigationControlPanel />
</SlideShowLayout>
